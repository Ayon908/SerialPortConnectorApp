<Window x:Class="WpfApp11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="comPortComboBox" HorizontalAlignment="Left" Margin="10,10,0,0"
  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="connectButton" Content="Connect"  HorizontalAlignment="Left"
VerticalAlignment="Top" Margin="140,10,0,0" Width="75"/>
        <ListBox x:Name="messageListBox" HorizontalAlignment="Left" VerticalAlignment="Top"
 Width="497" Height="100" Margin="10,50,0,0"/>
        <TextBox x:Name="messageTextBox" HorizontalAlignment="Left" VerticalAlignment="Top"
 Width="497" Height="23" Margin="10,160,0,0" TextWrapping="Wrap"/>
        <Button x:Name="browseButton" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top"
Width="75" Margin="10,200,0,0"/>
        <Button x:Name="sendButton" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top"
Width="75" Margin="90,200,0,0" />
        <TextBox x:Name="byteArrayTextBox" HorizontalAlignment="Left" Height="42" Margin="48,266,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="596"/>

    </Grid>
</Window>
